@model FinanceAdvisor.Web.Models.CreateMeetingViewModel

@{
    ViewData["Title"] = "Create Meeting";
}

<h2>Create Meeting</h2>

<form asp-controller="Meetings" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CreditConsultationCycleId" />

    <div class="form-group mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<FinanceAdvisor.Domain.Enums.Type>()">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
