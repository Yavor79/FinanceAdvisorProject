@model FinanceAdvisor.Web.Models.CreateCreditConsultationCycleViewModel;

@{
    ViewData["Title"] = "Create Credit Cycle";

    var isUser = User.Claims.Any(c =>
        c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role" &&
        c.Value == "User");

    var isAdvisor = User.Claims.Any(c =>
        c.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role" &&
        c.Value == "Advisor");

    var clientId = User.Claims.FirstOrDefault(c => c.Type == "user_id")?.Value;
    var advisorId = User.Claims.FirstOrDefault(c => c.Type == "advisor_id")?.Value;
}

<h2>Create Credit Consultation Cycle</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken();

    <div class="form-group mb-3">
        <label asp-for="CreditType" class="form-label"></label>
        <select asp-for="CreditType" class="form-select" asp-items="Html.GetEnumSelectList<FinanceAdvisor.Domain.Enums.CreditType>()">
            <option value="">-- Select Credit Type --</option>
        </select>
        <span asp-validation-for="CreditType" class="text-danger"></span>
    </div>

    @if (!isUser)
    {
        <div class="form-group mb-3">
            <label asp-for="ClientId" class="form-label">Client</label>
            <select asp-for="ClientId" class="form-control"
                    asp-items="@(new SelectList(Model.ChooseUsers, "Id", "UserName"))">
                <option value="">-- Select a Client --</option>
            </select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
        <input type="hidden" name="AdvisorId" value="@advisorId" />
    }
    else
    {
        <div class="form-group mb-3">
            <label asp-for="AdvisorId" class="form-label">Advisor</label>
            <select asp-for="AdvisorId" class="form-control"
                    asp-items="@(new SelectList(Model.ChooseAdvisors, "AdvisorId", "AdvisorName"))">
                <option value="">-- Select an Advisor --</option>
            </select>
            <span asp-validation-for="AdvisorId" class="text-danger"></span>
        </div>
        <input type="hidden" name="ClientId" value="@clientId" />
    }

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
