@model FinanceAdvisor.Web.Models.UpdateCreditConsultationCycleViewModel

@{
    ViewData["Title"] = "Edit Credit Consultation Cycle";
}

<h2>Edit Credit Consultation Cycle</h2>

<form asp-controller="CreditConsultationCycleManagement" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AdvisorId" class="control-label">Advisor</label>
        <select asp-for="AdvisorId" class="form-control">
            @* Render options from ChooseAdvisors *@
            @foreach (var advisor in Model.ChooseAdvisors)
            {
                <option value="@advisor.AdvisorId" selected="@(advisor.AdvisorId == Model.AdvisorId ? "selected" : null)">
                    @advisor.AdvisorName
                </option>
            }


            @* If current advisor not in list, add it manually *@
            @if (!Model.ChooseAdvisors.Any(a => a.AdvisorId == Model.AdvisorId) && !string.IsNullOrEmpty(Model.AdvisorName))
            {
                <option value="@Model.AdvisorId" selected>@Model.AdvisorName</option>
            }
        </select>
        <span asp-validation-for="AdvisorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FinanceAdvisor.Domain.Enums.Status>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
